{{#if shortenUrl}}
{{!--短網址產生提示 --}}
<div class="alert alert-major" role="alert">
    {{!-- check-circle-fill SVG --}}
    <div class="alert-context">
        <svg class="flex-shrink-0 me-3" width="24" height="24" fill="currentColor" viewBox="0 0 16 16" role="img"
            aria-label="Success:">
            <path
                d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
        </svg>
        {{!-- check-circle-fill SVG --}}
        <div>
            成功轉換短網址：<a class="shortenUrl" href="{{shortenUrl}}" target="_blank">{{shortenUrl}}</a>
        </div>
    </div>

    {{!-- copy button --}}
    <button type="button" class="btn btn-copy">複製
        <span class="btn btn-muted">已複製</span>
    </button>
</div>
{{/if}}

